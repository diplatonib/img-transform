    .ca_table tr .active {
        background-color: #0097a7;
    }

    .ca_table tr td.active div a {
        color: #ffffff;
        text-decoration: none !important;
    }

    .flex-center {
        display: flex; 
        justify-content: center;
    }

    tr td.left-aligned{
        text-align: left;
    }

    @media all and (max-width: 600px), (-webkit-min-device-pixel-ratio: 1.2) and (max-width: 600px){
